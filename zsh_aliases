# enable color support for ls and also handy aliases
alias ls='ls --color=auto'
alias ll='ls -alF --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'
alias lp='ls | less'
alias llp='ls -alF | less'
alias LS='ls --color=auto'

# grep color
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# don't autocorrect mkdir argument (it needs to not exist, that's the point)
alias mkdir='nocorrect mkdir -p'
alias mdr='mkdir -p'

# emacs
alias emacs='emacsclient -c -a=""'
alias e='emacsclient -c -a=""'

# xdg-open
# use open instead if on mac
if [[ $LINUX -eq 1 ]]; then
    alias o='xdg-open'
elif [[ $OSX -eq 1 ]]; then
    alias o='open'
fi

# directory changing
# not needed when using autojump
# alias db='cd ~/Dropbox'
# alias doc='cd /storage/Documents'
# alias 2a='cd /storage/Documents/Uni/PartIIA/'
# alias 2b='cd /storage/Documents/Uni/PartIIB/'
# alias cu='cd ~/Dropbox/Shared\ CICCU/'

# show mac and ip address
alias MAC='ifconfig | grep -i hwaddr'
alias IP='ifconfig | grep -i inet'

# start ArgoUML application
if [[ -d ~/ArgoUML ]]; then
    alias ArgoUML='java -jar ~/ArgoUML/argouml-0.34/argouml.jar'
fi

# reload zshrc file
alias reload=". ~/dotfiles/zshrc && echo 'zsh config reloaded from ~/dotfiles/zshrc'"

# clear latex autogenerated files to compile "from scratch"
# Note the (N) after each globbing option sets NULL_GLOB. This means the command
# will continue without error if no match for the given pattern is found.
alias cleanLatex="rm -fr *.aux(N) *.bbl(N) *.bcf(N) *.log(N) *.out(N) *.pyg(N) \
*.run.xml(N) *.tic(N) *.toc(N) *.blg(N) _minted-*(N) *.xdv(N) *.fdb_latexmk(N) \
*.fls(N)"

# start mysql daemon
if [[ $OSX -eq 1 ]]; then
    alias start_mysql="/usr/local/Cellar/mysql/5.6.26/support-files/mysql.server start"
fi

# simple command to get full path of a specified file
alias get-file-path="greadlink -nf"
